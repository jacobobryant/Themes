<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="preload" href="/fonts/raleway-var.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="{{asset "built/screen.css"}}" as="style">
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">

    {{ghost_head}}
</head>

<body class="{{body_class}}">
    <div class="gh-site">
        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner">
                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                        <a class="gh-head-logo" href="{{@site.url}}">
                            {{#if @site.logo}}
                                <img src="{{@site.logo}}" alt="{{@site.title}}">
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a>

                    </div>
                    <button class="gh-burger"></button>
                </div>
            </div>

            <div style="display:flex;">
                <nav class="gh-head-menu">
                    {{navigation}}


                    <div class="foo">
                      {{#unless @member}}
                      <a class="gh-head-btn u-hover" href="#/portal/signup">
                        Subscribe
                        <span class="u-hover-arrow">{{> icons/chevron-right}}</span>
                        <span class="u-hover-arrow">{{> icons/chevron-right}}</span>
                      </a>
                      {{else}}
                      <a class="gh-head-btn" href="#/portal/account">Account</a>
                        {{/unless}}
                    </div>
                </nav>

            </div>

        </header>

        {{{body}}}

        <footer class="gh-foot gh-outer">
            <div class="gh-foot-inner gh-inner">
                <div class="gh-copyright">
                    The Sample Â© {{date format="YYYY"}}
                </div>

                <nav class="gh-foot-menu">
                    {{navigation type="secondary"}}
                </nav>

            </div>
        </footer>
    </div>

    {{#is "post, page"}}
        {{> pswp}}
    {{/is}}

    <script src="{{asset "built/main.min.js"}}"></script>

    {{ghost_foot}}
</body>

</html>
